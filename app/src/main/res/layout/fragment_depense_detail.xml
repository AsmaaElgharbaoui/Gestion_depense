<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Montant -->
        <TextView
            android:id="@+id/txtMontantDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Montant : 100 DH"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/txtDateDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date : 01/01/2026"
            android:textSize="16sp"
            android:paddingBottom="12dp"/>

        <!-- Catégories -->
        <TextView
            android:id="@+id/txtCategoriesDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catégories : Nourriture, Transport"
            android:textSize="16sp"
            android:paddingBottom="12dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/txtDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description : Déjeuner au restaurant"
            android:textSize="16sp"
            android:paddingBottom="24dp"/>

        <!-- Boutons Modifier / Supprimer horizontaux -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btnModifier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modifier"
                android:textColor="@color/white"
                android:background="@drawable/button_blue_rounded"
                android:layout_marginEnd="8dp"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnSupprimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Supprimer"
                android:textColor="@color/white"
                android:background="@drawable/button_red_rounded"
                android:layout_marginStart="8dp"
                android:padding="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
